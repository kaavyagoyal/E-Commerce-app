<h1><%= @product.name %></h1>
<p><%= @product.description %></p>
<h2><%= @product.price %></h2>

<ul>
  <li><%= link_to "Edit", edit_product_path(@product) %></li>
  <li><%= link_to "Destroy", product_path(@product),
                  method: :delete,
                  data: { confirm: "Are you sure?" } %></li>
</ul>